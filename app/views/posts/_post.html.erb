<div class="row border-bottom mt-2 mb-2">
<div class="col">
<p><%= link_to post.title, post_path(post) %></p>
</div>
<div class="col">
<p><%= post.post_type %></p>
</div>
<div class="col text-end">
  <%= link_to 'Edit', edit_post_path(post), class: "btn btn-sm btn-primary" %>
  <%= link_to 'Delete', post_path(post), data: {turbo_method: 'delete', turbo_confirm: "Are you sure you want to delete this Post?"}, class: "btn btn-sm btn-danger" %>
</div>
</div>